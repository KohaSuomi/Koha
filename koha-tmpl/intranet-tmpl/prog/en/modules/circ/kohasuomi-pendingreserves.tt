                                  [% END %]
                                </td>
                                <td>
                                  [% FOREACH mtype IN reserveloo.mtypes %]
                                      <ul style="padding-left:0"><li style="list-style-type:none">[% mtype %]</li></ul>
                                  [% END %]
                                </td>
                                <td>
                                  [% FOREACH loc IN reserveloo.locations %]
